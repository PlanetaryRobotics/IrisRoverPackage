<?xml version="1.0" encoding="UTF-8"?>
<?oxygen RNGSchema="file:../xml/ISF_Component_Schema.rnc" type="compact"?>

<component name="ComLogger" kind="active" namespace="CubeRover" modeler="true">

    <import_port_type>Fw/Com/ComPortAi.xml</import_port_type>
    <import_port_type>Fw/Time/TimePortAi.xml</import_port_type>
    <import_port_type>Fw/Cmd/CmdRegPortAi.xml</import_port_type>
    <import_port_type>Fw/Cmd/CmdPortAi.xml</import_port_type>
    <import_port_type>Fw/Log/LogPortAi.xml</import_port_type>
    <import_port_type>Fw/Cmd/CmdResponsePortAi.xml</import_port_type>
    <import_port_type>Svc/Ping/PingPortAi.xml</import_port_type>
    <import_dictionary>CubeRover/ComLogger/Commands.xml</import_dictionary>
    <import_dictionary>CubeRover/ComLogger/Events.xml</import_dictionary>

    <ports>


        <port name="comIn" data_type="Fw::Com"  kind="async_input"    max_number="1">
            <comment>
            Log in (buffered) port from Active Logger
            </comment>
        </port>

        <port name="timeCaller" data_type="Fw::Time"  kind="output" role="TimeGet"    max_number="1">
            <comment>
            Time get port 
            </comment>
        </port>

        <port name="cmdRegOut" data_type="Fw::CmdReg"  kind="output" role="CmdRegistration"    max_number="1">
            <comment>
            Command Registration Port
            </comment>
        </port>

        <port name="cmdIn" data_type="Fw::Cmd"  kind="input" role="Cmd"    max_number="1">
            <comment>
            Command Input port 
            </comment>
        </port>

        <port name="logOut" data_type="Fw::Log"  kind="output" role="LogEvent"    max_number="1">
            <comment>
            Output port to ground (unsure)
            </comment>
        </port>
        
        <port name="GndOut" data_type="Fw::Com" kind="output" >
            <comment>
            Log out (buffered) port to ground
            </comment>
        </port>
        
        <port name="cmdResponseOut" data_type="Fw::CmdResponse"  kind="output" role="CmdResponse"    max_number="1">
            <comment>
            Command Response Port
            </comment>
        </port>
        
        <port name="pingIn" data_type="Svc::Ping" kind="async_input"  max_number = "1">
            <comment>
            Ping Health input port
            </comment>
        </port>
        
        <port name="pingOut" data_type="Svc::Ping" kind="output"  max_number = "1">
            <comment>
            Ping Health output port
            </comment>
        </port>
    </ports>

    <telemetry>
        <channel id="0" name="BYTES_READ" data_type="U32">
            <comment>
                Number of bytes read from flash
            </comment>
        </channel>
        <channel id="1" name="BYTES_WRITTEN" data_type="U32">
            <comment>
                Number of bytes written to flash
            </comment>
        </channel>
        <channel id="2" name="READ_ADDRESS" data_type="U32">
            <comment>
                Previous Address Read from flash
            </comment>
        </channel>
        <channel id="3" name="WRITE_ADDRESS" data_type="U32">
            <comment>
                Previous Address written to flash
            </comment>
        </channel>
    </telemetry>

</component>