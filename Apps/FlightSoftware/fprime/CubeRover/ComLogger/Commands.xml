<!--====================================================================== 

  Svc 
  ComLogger
  Commands

======================================================================-->

<commands opcode_base="0x00">

  <command kind="async" opcode="0x00" mnemonic="CloseFile">
    <comment>Forces a close of the currently opened file.</comment>
  </command>

  <command kind="async" opcode="0x01" mnemonic="SendAllLogs">
    <comment>Sends all logs from flash to Ground</comment>
  </command>

  <command kind="async" opcode="0x02" mnemonic="SendSetofLogs">
    <comment>Sends a set of logs from flash to Ground</comment>
    <args>
    	<arg name="start" type="U32">
    		<comment>The start time (seconds) for a log</comment>
    	</arg>
    	<arg name="end" type="U32">
    		<comment>The end time (seconds) for a log</comment>
    	</arg>
    </args>	
  </command>

</commands>
