<commands>
  <command kind="async" opcode="0x00" mnemonic="SignalGen_Settings">
    <comment>Signal Generator Settings</comment>
    <args>
      <arg 
        type="U32" 
        name="Frequency">
      </arg>
      <arg
        type="U32"
        name="Amplitude">
      </arg>
      <arg
        type="U32"
        name="Phase">
      </arg>
    </args>
  </command>
  <command kind="async" opcode="1" mnemonic="SignalGen_Toggle">
    <comment>Toggle Signal Generator On/Off.</comment>
  </command>
  <command kind="async" opcode="2" mnemonic="SignalGen_Skip">
    <comment>Skip next sample</comment>
  </command>
</commands>
